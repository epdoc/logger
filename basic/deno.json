{
  "name": "@scope/basic",
  "version": "3.0.0",
  "description": "Basic logging module that implements the core logger interface",
  "exports": "./mod.ts",
  "tasks": {
    "test": "deno test --allow-env",
    "lint": "deno lint",
    "build": "deno run -A scripts/build_npm.ts",
    "publish_npm": "cd npm & npm publish --access public"
  },
  "tests": {
    "include": ["test/**/*.ts"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@epdoc/typeutil": "../@epdoc/typeutil/mod.ts",
    "@epdoc/timeutil": "../@epdoc/timeutil/mod.ts"
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "lineWidth": 120
    }
  }
}
