{
  "name": "@epdoc/msgbuilder",
  "version": "0.1.0-alpha.7",
  "description": "Message builder module with chainable formatting",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "test": "deno test -A",
    "lint": "deno lint",
    "check": "deno check src test deno.json",
    "prepublish": "deno publish --dry-run",
    "publish": "deno publish"
  },
  "exports": "./src/mod.ts",
  "test": {
    "include": [
      "./src/**/*test.ts",
      "./test/**/*test.ts"
    ]
  },
  "lint": {
    "include": [
      "./src",
      "./test",
      "deno.json"
    ]
  },
  "fmt": {
    "include": [
      "./src",
      "./test",
      "deno.json"
    ],
    "singleQuote": true,
    "lineWidth": 120
  },
  "imports": {
    "@epdoc/duration": "jsr:@epdoc/duration@^0.3.7",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.9/colors",
    "@epdoc/type": "jsr:@epdoc/type@^1.2.4",
    "@epdoc/string": "jsr:@epdoc/string@^0.1.16",
    "@std/assert": "jsr:@std/assert@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.17"
  }
}