{
  "name": "@epdoc/logger",
  "version": "1003.1.4",
  "description": "Logging module with chainable formatting, middleware mixins and extendable transports",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "test": "deno test -A",
    "lint": "deno lint",
    "check": "deno check src test",
    "prepublish": "deno publish --dry-run",
    "publish": "deno publish"
  },
  "exports": "./src/mod.ts",
  "test": {
    "include": [
      "src/**/*test.ts",
      "test/**/*test.ts"
    ]
  },
  "lint": {
    "include": [
      "src",
      "test"
    ],
    "exclude": [
      "test/archive"
    ]
  },
  "fmt": {
    "include": [
      "src",
      "test",
      "deno.json"
    ],
    "singleQuote": true,
    "lineWidth": 120
  },
  "imports": {
    "$log": "./src/types.ts",
    "$logger": "./src/loggers/mod.ts",
    "$transport": "./src/transports/mod.ts",
    "@epdoc/loglevels": "jsr:@epdoc/loglevels@^0.0.7",
    "@epdoc/msgbuilder": "jsr:@epdoc/msgbuilder@^0.1.0-alpha.5",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.8/colors",
    "@epdoc/type": "jsr:@epdoc/type@^1.2.2",
    "@epdoc/string": "jsr:@epdoc/string@^0.1.15",
    "@epdoc/duration": "jsr:@epdoc/duration@^0.3.6",
    "@epdoc/datetime": "jsr:@epdoc/datetime@^2.0.13",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  }
}