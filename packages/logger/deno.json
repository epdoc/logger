{
  "name": "@epdoc/logger",
  "version": "1003.0.0-alpha.3",
  "description": "Logging module with chainable formatting, middleware mixins and extendable transports",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "test": "deno test -A",
    "lint": "deno lint",
    "check": "deno check src examples test",
    "examples": "./examples/run.sh",
    "prepublish": "deno publish --dry-run",
    "publish": "deno publish",
    "build": "deno run -A scripts/build_npm.ts"
  },
  "exports": "./src/mod.ts",
  "test": {
    "include": [
      "src/**/*test.ts",
      "test/**/*test.ts"
    ]
  },
  "lint": {
    "include": [
      "src",
      "test/**/*test.ts",
      "mod.ts",
      "examples"
    ]
  },
  "fmt": {
    "include": [
      "src",
      "test/**/*test.ts",
      "mod.ts",
      "deno.json",
      "examples"
    ],
    "singleQuote": true,
    "lineWidth": 120
  },
  "imports": {
    "$log": "./src/types.ts",
    "$logger": "./src/loggers/mod.ts",
    "$transport": "./src/transports/mod.ts",
    "$level": "jsr:@epdoc/loglevels@^0.0.1-alpha.8",
    "@epdoc/msgbuilder": "jsr:@epdoc/msgbuilder@^0.0.1-alpha.4",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.8/colors",
    "@epdoc/type": "jsr:@epdoc/type@^1.1.13",
    "@epdoc/string": "jsr:@epdoc/string@^0.1.1",
    "@epdoc/duration": "jsr:@epdoc/duration@^0.2.1",
    "@epdoc/datetime": "jsr:@epdoc/datetime@^1.0.9-beta.1",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/testing": "jsr:@std/testing@^1.0.15"
  }
}