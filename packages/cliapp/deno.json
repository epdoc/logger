{
  "name": "@epdoc/cliapp",
  "description": "A CLI application template for @epdoc/logger",
  "version": "2.0.6-alpha.2",
  "exports": "./src/mod.ts",
  "tasks": {
    "dev": "deno test --watch",
    "lint": "deno lint src test/*.test.ts",
    "check": "deno check src test/*.test.ts",
    "test": "deno test -A test/*.test.ts",
    "prepublish": "deno fmt && deno task lint && deno task check && deno task test",
    "example:01": "deno run -A test/example.01.test.ts",
    "example:02": "deno run -A test/example.02.test.ts",
    "example:03": "deno run -A test/example.03.test.ts",
    "example:04": "deno run -A test/example.04.test.ts"
  },
  "license": "MIT",
  "imports": {
    "@epdoc/logger": "jsr:@epdoc/logger@^1003.2.11",
    "@epdoc/msgbuilder": "jsr:@epdoc/msgbuilder@^0.1.1",
    "@epdoc/type": "jsr:@epdoc/type@^1.2.4",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fmt": "jsr:@std/fmt@^1.0.9",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "commander": "npm:commander@^14.0.3"
  },
  "lint": {
    "include": [
      "src",
      "test/*.ts",
      "mod.ts",
      "*.json"
    ]
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 120,
    "include": [
      "src",
      "test",
      "*.json",
      "*.md"
    ]
  }
}