{
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "lint": "deno lint packages deno.json launch.config.json",
    "check": "deno check packages"
  },
  "workspace": ["./packages/*"],
  "fmt": {
    "include": [
      "packages",
      "deno.json",
      "launch.config.json"
    ],
    "singleQuote": true,
    "lineWidth": 120
  },
  "lint": {
    "include": ["packages"],
    "exclude": ["packages/logdy", "packages/examples/logdy.run.ts"]
  },
  "test": {
    "include": ["packages/**/*.test.ts"],
    "exclude": ["packages/logdy"],
    "permissions": {
      "read": true,
      "write": true,
      "env": true,
      "net": true,
      "run": true,
      "sys": true
    }
  }
}
