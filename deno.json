{
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "lint": "deno lint packages deno.json launch.config.json",
    "check": "deno check packages",
    "test:demo": "cd packages/demo && deno test --allow-all",
    "docs": "deno doc --json packages/loglevels/src/mod.ts > packages/loglevels/library-docs.json && deno doc --json packages/msgbuilder/src/mod.ts > packages/msgbuilder/library-docs.json && deno doc --json packages/logger/src/mod.ts > packages/logger/library-docs.json && deno doc --json packages/cliapp/src/mod.ts > packages/cliapp/library-docs.json"
  },
  "workspace": [
    "./packages/loglevels",
    "./packages/msgbuilder",
    "./packages/logger",
    "./packages/cliapp",
    "./packages/demo",
    "./packages/cliffapp",
    "./packages/demo-cliffy",
    "./packages/demo-cliapp"
  ],
  "fmt": {
    "include": ["packages", "deno.json", "launch.config.json"],
    "exclude": [
      "packages/logdy",
      "packages/examples/logdy.run.ts",
      "packages/logjava"
    ],
    "singleQuote": true,
    "lineWidth": 120
  },
  "lint": {
    "include": ["packages"],
    "exclude": [
      "packages/logdy",
      "packages/examples/logdy.run.ts",
      "packages/logjava"
    ]
  },
  "test": {
    "include": ["packages/**/*.test.ts"],
    "exclude": ["packages/logdy", "packages/logjava"],
    "permissions": {
      "read": true,
      "write": true,
      "env": true,
      "net": true,
      "run": true,
      "sys": true
    }
  }
}
