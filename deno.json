{
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "lint": "deno lint packages deno.json launch.config.json",
    "check": "deno check packages",
    "test:demo": "cd packages/demo && deno test --allow-all"
  },
  "workspace": [
    "./packages/loglevels",
    "./packages/msgbuilder",
    "./packages/logger",
    "./packages/cliapp",
    "./packages/demo",
    "./packages/examples",
    "./packages/cliffapp",
    "./packages/demo-cliffy"
  ],
  "fmt": {
    "include": [
      "packages",
      "deno.json",
      "launch.config.json"
    ],
    "singleQuote": true,
    "lineWidth": 120
  },
  "lint": {
    "include": ["packages"],
    "exclude": ["packages/logdy", "packages/examples/logdy.run.ts", "packages/logjava"]
  },
  "test": {
    "include": ["packages/**/*.test.ts"],
    "exclude": ["packages/logdy", "packages/logjava"],
    "permissions": {
      "read": true,
      "write": true,
      "env": true,
      "net": true,
      "run": true,
      "sys": true
    }
  }
}
