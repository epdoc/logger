{
  "description": "Logging module with express middleware mixins and extendable transports",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "workspace": ["message", "levels", "cli", "std", "msgconsole"],
  "license": "MIT",
  "tasks": {
    "test": "deno test --allow-env",
    "lint": "deno lint",
    "build": "deno run -A scripts/build_npm.ts",
    "publish_npm": "cd npm & npm publish --access public"
  },
  "test": {
    "include": [
      "message/**/*test.ts",
      "levels/**/*test.ts",
      "cli/**/*test.ts",
      "std/**/*test.ts",
      "msgconsole/**/*test.ts"
    ]
  },
  "lint": {
    "include": ["message/**/*.ts", "levels/**/*.ts", "cli/**/*.ts", "std/**/*.ts", "msgconsole/**/*.ts"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 120
  }
}
