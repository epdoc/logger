{
  "name": "@epdoc/logger",
  "version": "1002.3.3",
  "description": "Logging module with chainable formatting, express middleware mixins and extendable transports",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "test": "deno test -A",
    "lint": "deno lint",
    "check": "deno check src examples test",
    "examples": "./examples/run.sh",
    "prepublish": "deno publish --dry-run",
    "publish": "deno publish",
    "build": "deno run -A scripts/build_npm.ts",
    "publish_npm": "cd npm & npm publish --access public"
  },
  "exports": "./mod.ts",
  "test": {
    "include": ["src/**/*test.ts", "test/**/*test.ts"]
  },
  "lint": {
    "include": ["src", "test/**/*test.ts", "mod.ts", "examples"]
  },
  "fmt": {
    "include": ["src", "test/**/*test.ts", "mod.ts", "deno.json", "examples"],
    "singleQuote": true,
    "lineWidth": 120
  },
  "imports": {
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.8/colors",
    "@epdoc/type": "jsr:@epdoc/type@^1.1.5",
    "@epdoc/string": "jsr:@epdoc/string@^0.1",
    "@epdoc/duration": "jsr:@epdoc/duration@^0.1",
    "@epdoc/datetime": "jsr:@epdoc/datetime@^1.0",
    "@std/assert": "jsr:@std/assert@^1.0.13"
  }
}
