{
  "name": "@epdoc/logger",
  "version": "1002.0.8",
  "description": "Logging module with chainable formatting, express middleware mixins and extendable transports",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "test": "deno test -A",
    "lint": "deno lint",
    "build": "deno run -A scripts/build_npm.ts",
    "publish_npm": "cd npm & npm publish --access public"
  },
  "exports": "./mod.ts",
  "test": {
    "include": ["src/**/*test.ts", "test/**/*test.ts"]
  },
  "lint": {
    "include": ["src/**/*.ts"]
  },
  "imports": {
    "@std/fmt": "jsr:@std/fmt@^1.0.6",
    "@epdoc/type": "jsr:@epdoc/type@1.0.2",
    "@epdoc/string": "jsr:@epdoc/string@0.1.0",
    "@epdoc/duration": "jsr:@epdoc/duration@0.1.0",
    "@epdoc/datetime": "jsr:@epdoc/datetime@1.0.0",
    "@std/assert": "jsr:@std/assert@1.0.12"
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 120
  }
}
